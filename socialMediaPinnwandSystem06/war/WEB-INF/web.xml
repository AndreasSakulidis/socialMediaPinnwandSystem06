<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<servlet>
		<servlet-name>pinnwandVerwaltung</servlet-name>
		<servlet-class>de.hdm.gruppe6.itprojekt.server.PinnwandVerwaltungImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>pinnwandVerwaltung</servlet-name>
		<url-pattern>/socialmediapinnwandsystem06/pinnwandVerwaltung
		</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>reportGenerator</servlet-name>
		<servlet-class>de.hdm.gruppe6.itprojekt.server.report.ReportGeneratorImpl
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>reportGenerator</servlet-name>
		<url-pattern>/socialmediapinnwandsystem06/reportgenerator</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>SocialMediaPinnwandSystem06.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet
		</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value />
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
	</servlet-mapping>

</web-app>
